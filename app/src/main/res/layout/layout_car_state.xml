            <TextView
                    android:id="@+id/text_air_resistance_power_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_air_resistance_power"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_air_resistance_power_value"
