                    android:layout_toEndOf="@id/text_produced_energy_value"
                    android:text="@string/label_produced_energy_unit"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />


            <TextView
                    android:id="@+id/text_acceleration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_produced_energy"
                    android:text="@string/label_acceleration"
