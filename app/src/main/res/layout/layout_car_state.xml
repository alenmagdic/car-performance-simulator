                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_total_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_total_distance"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_total_distance"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="526.3" />

            <TextView
                    android:id="@+id/text_total_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_total_distance_value"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_total_distance_value"
