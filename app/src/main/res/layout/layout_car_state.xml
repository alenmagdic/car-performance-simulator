                    android:id="@+id/text_air_resistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_roll_resistance"
                    android:text="@string/label_air_resistance"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_air_resistance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_air_resistance"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_air_resistance"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="526.3" />

            <TextView
                    android:id="@+id/text_air_resistance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_air_resistance"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_air_resistance_value"
                    android:text="@string/label_air_resistance_unit"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />


            <TextView
                    android:id="@+id/text_roll_resistance_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_air_resistance"
                    android:text="@string/label_roll_resistance_power"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_roll_resistance_power_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_roll_resistance_power"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_roll_resistance_power"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="526.3" />

            <TextView
                    android:id="@+id/text_roll_resistance_power_unit"
                    android:layout_width="wrap_content"
