                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_kinetic_energy"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_kinetic_energy"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="526.3" />

            <TextView
                    android:id="@+id/text_kinetic_energy_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_kinetic_energy"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_kinetic_energy_value"
                    android:text="@string/label_kinetic_energy_unit"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />


            <TextView
                    android:id="@+id/text_produced_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_kinetic_energy"
                    android:text="@string/label_produced_energy"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_produced_energy_value"
                    android:layout_width="wrap_content"
