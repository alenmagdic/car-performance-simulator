                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_used_power_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_power"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_power"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="23.4" />

            <TextView
                    android:id="@+id/text_power_values_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_power"
                    android:layout_marginStart="1dp"
                    android:layout_toEndOf="@id/text_used_power_value"
                    android:text="@string/label_power_values_separator"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
