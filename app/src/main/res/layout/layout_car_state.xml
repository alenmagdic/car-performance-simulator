                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="56.7" />

            <TextView
                    android:id="@+id/text_power_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_power"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_available_power_value"
                    android:text="@string/label_power_unit"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />


            <TextView
                    android:id="@+id/text_torque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_power"
                    android:text="@string/label_torque"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace" />

            <TextView
                    android:id="@+id/text_used_torque_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_torque"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/text_torque"
                    android:textColor="@color/colorSimulationStateText"
                    android:typeface="monospace"
                    tools:text="275.4" />

            <TextView
                    android:id="@+id/text_torque_values_separator"
                    android:layout_width="wrap_content"
